<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <EditText 
        android:id="@+id/new_password"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:hint="确认密码"
        android:singleLine="true"
        android:inputType="textPassword"
        android:background="@drawable/launcher_button_background_unpressed"/>
        
        <EditText 
            android:id="@+id/sms_verify_for_new_password"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:hint="短信验证码"
            android:singleLine="true"
            android:inputType="number"
            android:layout_height="40dp"
            android:background="@drawable/launcher_button_background_unpressed"/>
        
        <LinearLayout 
            android:id="@+id/change_password_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_chart"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            
            <Button 
                android:id="@+id/return_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="返回"
                android:background="@drawable/launcher_button_background"/>
            
            <Button 
                android:id="@+id/change_password_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="重置"
                android:background="@drawable/launcher_button_background"/>
            
        </LinearLayout>
    
</LinearLayout>
