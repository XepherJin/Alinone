<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/person_center_container"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/user_nick_name_from_person_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:text="当前派送员："/>
        
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="5dp"
            android:background="#c0c0c0"/>
        
        <Button 
            android:id="@+id/bind_merchant_button"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="绑定商家"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:background="@drawable/scan_order_and_bind_merchant"
            android:gravity="center"/>
        
        <ListView 
            android:id="@+id/person_center_listview"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            
        </ListView>

    </LinearLayout>

</LinearLayout>